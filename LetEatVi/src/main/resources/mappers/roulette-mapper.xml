<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="roulette-mapper">

	<resultMap id="resultCoupon" type="Coupon">
		<id column="CID" property="coupon_Id"/>
		<result column="CNAME" property="coupon_name"/>
		<result column="DISCOUNTRATE" property="discount_rate" />
	</resultMap>
	
	
<select id="intoRoulette" parameterType="string" resultType="string">
	SELECT COUPONSTATUS
	FROM MEMBER
	WHERE USERID = #{ userId }
</select>

<select id="getCoupon" parameterType="string" resultMap="resultCoupon">
	SELECT *
	FROM COUPON
	WHERE CNAME = #{ coupon_name }
</select>




</mapper>